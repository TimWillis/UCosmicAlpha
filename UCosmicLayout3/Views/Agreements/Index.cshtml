@{
    ViewBag.Title = "Institutional Agreement";
}

<div class="content fixed to-top" data-current-module="agreements">
    <div class="group">
        <div class="float-left from-top">
            <header>
                <h1>
                    @ViewBag.Title
                </h1>
            </header>
            <div data-side-swiper="root">
                <div data-side-swiper="deck">
                    <section id="all" data-side-swiper="on">
                        <form>
                            <section id="participants">
                                <header>
                                    <h2>
                                        Participants
                                    </h2>
                                </header>
                                <div>
                                    <ul>
                                        <li>
                                            <div class="typed-item">
                                                <a href="#/participants/remove/6" title="Remove this participant"><i class="red minus float-right"></i></a>
                                                <div class="type">
                                                    Home
                                                </div>
                                                <div class="item">
                                                    <div>
                                                        <strong>University of South Florida</strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="typed-item">
                                                <a href="#/participants/remove/6" title="Remove this participant"><i class="red minus float-right"></i></a>
                                                <div class="type">
                                                    Partner
                                                </div>
                                                <div class="item">
                                                    <div>
                                                        <strong>University of Cologne</strong> (Universität zu Köln)
                                                    </div>
                                                    <div>
                                                        <a href="http://www.uni-koeln.de" target="_blank">www.uni-koeln.de</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <footer>
                                    <a href="#/participants/add" class="button">
                                        <i class="green plus"></i>
                                        <span class="text">Add a participant</span>
                                    </a>
                                </footer>
                            </section>
                            @*@Html.Partial(MVC.Shared.Views._SampleVerticalContent)*@
                        </form>
                    </section>
                    <section id="participants_add" data-side-swiper="off">
                        <form>
                            <header>
                                <h2>
                                    Add a participant
                                </h2>
                            </header>
                            <div class="field">
                                <input type="search" placeholder="Enter the participant's name or website URL"/>
                            </div>
                            <div class="field">
                                <select>
                                    <option>[Narrow by country]</option>
                                </select>
                            </div>
                            <footer>
                                <a class="button" data-bind="click: back">
                                    <i class="red closer"></i>
                                    <span class="text">Cancel</span>
                                </a>
                            </footer>
                        </form>
                    </section>
                </div>
            </div>
        </div>
        <aside class="float-right" data-fixed-scroll="root">
            <div data-fixed-scroll="anchor"></div>
            <div data-fixed-scroll="content">
                @Html.Partial(MVC.Shared.Views._SampleSidebarNav)
            </div>
        </aside>
    </div>
</div>

@section scripts
{

    <script type="text/javascript" src="@Url.Content(Links.Models.InstitutionalAgreementEditModel_js)"></script>

    <script type="text/javascript">

        ko.applyBindings(new InstitutionalAgreementEditModel(), $('#main')[0]);

    </script>

}
