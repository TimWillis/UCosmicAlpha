<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div>
            This is where the header stuff will go.
        </div>
    </header>
    <div id="main" class="group">
        <div>
            @RenderBody()
        </div>
    </div>
    <footer>
        <div>
            This is where the footer stuff will go.
            <a href="@Url.Action(MVC.Home.Index())">Index</a>
            <a href="@Url.Action(MVC.Home.Index2())">Index 2</a>
            <a href="@Url.Action(MVC.Home.Index3())">Index 3</a>
            <a href="@Url.Action(MVC.Home.Index4())">Index 4</a>
            <a href="@Url.Action(MVC.Home.Index5())">Index 5</a>
            <a href="@Url.Action(MVC.Home.Index6())">Index 6</a>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
