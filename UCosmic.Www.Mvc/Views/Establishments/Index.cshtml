@{
    ViewBag.Title = "Index";
}
@section bib
{
    <nav class="bib hide" data-current-bib="establishments">
        @Html.Partial(MVC.Admin.Views._Bib)
    </nav>
}
@section scripts
{
    <script type="text/javascript">

        function EstablishmentSearchViewModel() {
            var self = this;

            self.countries = ko.observableArray([]);
            self.country = ko.observable();

            ko.computed(function() {
                $.get(app.webApiRoutes.Countries.GetCountries())
                .success(function (data) {
                    self.countries(data);
                });
            });
        }

        ko.applyBindings(new EstablishmentSearchViewModel(), $('#main')[0]);
    </script>
}
<div class="content fixed to-top" data-current-module="admin">
    <div data-side-swiper="root">
        <div data-side-swiper="deck">
            <div id="search" data-side-swiper="on">
                <form class="group">
                    <div class="float-left from-top">
                        <header>
                            <h1>
                                Establishments
                            </h1>
                        </header>
                        <div class="field">
                            <input type="search" placeholder="Enter the participant's name or website URL" />
                        </div>
                    </div>
                    <aside class="float-right from-top" data-fixed-scroll="root">
                        <div data-fixed-scroll="anchor"></div>
                        <div data-fixed-scroll="content">
                            <nav class="side">
                                <ul>
                                    <li class="static">
                                        <span class="text">Advanced search options</span>
                                        <div class="content">
                                            <div class="field">
                                                <select class="side" data-bind="options: countries, optionsCaption: '[Narrow by country]', optionsText: 'name', optionsValue: 'code', value: country">
                                                    <option>[Loading...]</option>
                                                </select>
                                            </div>
                                            <div class="field">
                                                <select class="side">
                                                    <option>Sort by country</option>
                                                    <option>Sort by name</option>
                                                </select>
                                            </div>
                                            <div class="field">
                                                <select class="side">
                                                    <option>Show 10 results per page</option>
                                                    <option>Show 20 results per page</option>
                                                    <option>Show 50 results per page</option>
                                                    <option>Show 100 results per page</option>
                                                    <option>Show all results</option>
                                                </select>
                                            </div>
                                            <div class="field">
                                                <a href="#prev">&lt;&lt; Previous</a> |
                                                    <a href="#next">Next &gt;&gt;</a>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="current">
                                        <a href="#" class="group">
                                            <div class="arrow float-left"></div>
                                            <span class="text float-left">Table</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="group">
                                            <div class="arrow float-left"></div>
                                            <span class="text float-left">List</span>
                                        </a>
                                    </li>
                                    <li class="">
                                        <a href="#" class="group">
                                            <div class="arrow float-left"></div>
                                            <span class="text float-left">Grid</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="group">
                                            <div class="arrow float-left"></div>
                                            <span class="text float-left">Map</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="group">
                                            <div class="arrow float-left"></div>
                                            <span class="text float-left">Tree</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </aside>
                </form>
            </div>
        </div>
    </div>
</div>
