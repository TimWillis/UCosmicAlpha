<div data-side-swiper="root" id="search">
    <div data-side-swiper="deck">
        <div data-side-swiper="on" class="left">
            <section id="participants">
                <header>
                    <h2>
                        Name(s)
                        <a href="#" title="Add a new name" data-bind="visible: !isSpinningNames() && !editingName(), click: addName">
                            <img src="~/styles/icons/plus-24-green.png" alt="Add a new name" />
                        </a>
                        <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: isSpinningNames" />
                    </h2>
                </header>
                <ul class="data-items" data-bind="foreach: names">
                    <li data-bind="css: { selected: editMode }">
                        <div class="text-box when-hovered" data-bind="click: showEditor, visible: !editMode(), css: { 'force-unhoverable': $parent.editingName() }">
                            <div class="group">
                                <div class="on-left" style="max-width: 645px;">
                                    <span data-bind="text: text, css: { 'bold': isOfficialName() }" class="inline-block"></span>
                                    <span class="green badge" data-bind="visible: isOfficialName" style="display: none;">Official</span>
                                    <span class="blue badge" data-bind="visible: languageName, text: languageName" style="display: none;"></span>
                                    <span class="red badge" data-bind="visible: isFormerName" style="display: none;">Former / Defunct</span>
                                </div>
                                <div class="on-right" data-bind="visible: !isOfficialName() && !$parent.editingName()">
                                    <a href="#" data-bind="click: purge, visible: !isSpinningPurge()" title="Delete this name">
                                        <img src="~/styles/icons/minus-20-red.png" alt="" class="align-top" /></a>
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" class="align-top" data-bind="visible: isSpinningPurge" />
                                </div>
                            </div>
                        </div>
                        <div data-bind="visible: editMode" style="display: none;">
                            <form method="POST" data-bind="submit: saveEditor, validationOptions: { decorateElement: true, errorClass: 'error' }">
                                <div class="field" style="margin-top: 0;">
                                    <textarea rows="1" class="no-resize" data-bind="value: text, element: 'textElement', css: { spinning: isSpinningSaveValidator }" data-autosize="true" placeholder="[Enter establishment name here]"></textarea>
                                </div>
                                <div class="field">
                                    <label data-bind="click: clickOfficialNameCheckbox">
                                        <input type="checkbox" data-bind="checked: isOfficialName, enable: !originalValues.isOfficialName" />
                                        Offical Name
                                    </label>
                                    &nbsp;&nbsp;&nbsp;
                                    <label>
                                        <input type="checkbox" data-bind="checked: isFormerName, enable: !isOfficialName()" />
                                        Former / Defunct Name
                                    </label>
                                </div>
                                <div class="field">
                                    <select data-bind="value: selectedLanguageCode, options: $parent.languages, optionsText: 'name', optionsValue: 'code', element: 'languagesElement', visible: $parent.languages().length > 0" style="display: none;">
                                    </select>
                                    <select data-bind="visible: $parent.languages().length < 1">
                                        <option>[Loading...]</option>
                                    </select>
                                </div>
                                <div>
                                    <input type="submit" value="Save" data-bind="enable: !isSpinningSave()" />
                                    <input type="button" value="Cancel" data-bind="click: cancelEditor, enable: !isSpinningSave()" class="link" />
                                    &nbsp;
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: isSpinningSaveValidator" />
                                    <strong data-bind="visible: isSpinningSaveValidator">Validating...</strong>
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: isSpinningSave" />
                                    <strong data-bind="visible: isSpinningSave">Saving...</strong>
                                </div>
                            </form>
                        </div>
                        <div data-bind="element: 'confirmPurgeDialog'" title="Please confirm your intent" style="display: none;">
                            <div>
                                <p>
                                    Are you sure you want to delete this establishment name?
                                </p>
                                <div>
                                    <span data-bind="text: text, css: { 'bold': isOfficialName() }" class="inline-block"></span>
                                    <span class="green badge" data-bind="visible: isOfficialName" style="display: none;">Official</span>
                                    <span class="blue badge" data-bind="visible: languageName, text: languageName" style="display: none;"></span>
                                    <span class="red badge" data-bind="visible: isFormerName" style="display: none;">Former / Defunct</span>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </section>
            <div data-bind="element: 'genericAlertDialog'" title="" style="display: none;">
                <div>
                    <p class="content">
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
