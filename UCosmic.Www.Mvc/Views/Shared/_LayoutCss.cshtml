@model UCosmic.Www.Mvc.Models.Tenancy
@{
    // make sure the style bundle actually exists
    var root = Server.MapPath("~/styles");
    var target = Path.Combine(root, string.Format(@"tenants\{0}", Model.Domain));
    var info = Directory.GetDirectories(Path.Combine(root, "tenants"));
    var tenant = "_default";
    if (info.Contains(target))
    {
        tenant = Model.Domain;
    }
}
@Styles.Render(string.Format("~/styles/tenants/{0}/main", tenant))
