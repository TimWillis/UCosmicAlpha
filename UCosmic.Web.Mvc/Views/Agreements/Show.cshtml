@{
    ViewBag.Title = "Agreement Details";
}
@section bib
{
    <nav class="bib hide" data-current-bib="show">
        @Html.Partial(MVC.Agreements.Views._Bib, new ViewDataDictionary
        {
            { "Show", true },
            { "Edit", ViewBag.AgreementId },
        })
    </nav>
}
@section scripts
{
    @Scripts.Render("~/bundles/agreementPublicView")

    <script type="text/javascript">
        var viewModel = new Agreements.ViewModels.PublicView(parseInt(@ViewBag.AgreementId), '@ViewBag.AgreementVisibility');
        ko.applyBindings(viewModel, $('#publicView')[0]);
    </script>

}

<div class="content fixed to-top" data-current-module="agreements" id="publicView">
    <div class="group">
        <div class="on-left from-top" style="width: 500px; margin-right: 12px; overflow-x: hidden;">
            <header>
                <h1>
                    @ViewBag.Title
                </h1>
            </header>
            @Html.Partial(MVC.Agreements.Views._PublicViewContent)
        </div>
        <div class="on-right from-top" style="width: 438px; background-color: grey; margin-top: 50px;">
            <div style="height: 438px; width: 438px;" id="map-canvas"></div>
        </div>
    </div>
</div>


