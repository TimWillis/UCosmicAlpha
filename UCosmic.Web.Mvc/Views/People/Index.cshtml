@using UCosmic.Web.Mvc.Models
@{
    ViewBag.Title = "UCosmic Profile";
}
@section bib
{
    <nav class="bib">
        @Html.Partial(MVC.Employees.Views._Bib, new EmployeesBibNavModel { Custom = ViewBag.CustomBib })
    </nav>
}
@section styles
{
    <style>
        .comma-list {
            display: inline;
        }

            .comma-list:after {
                content: ', ';
            }

            .comma-list:last-child:after {
                content: '';
            }
    </style>
}
<div class="content fixed to-top" data-current-module="faculty">
    <div class="group">
        <div class="on-left from-top">
            <header>
                <h1>
                    UCosmic Profile
                </h1>
            </header>
            @Html.Action(MVC.People.GetCard())
            @Html.Action(MVC.People.GetAffiliations())
            @Html.Action(MVC.People.GetEmails())

            @* TIM UI CODE TO REPLACE THIS *@
            @if (User.Identity.Name.Equals(ViewBag.UserName))
            {
                <form method="POST" action="@Url.Action(MVC.People.Emails())">
                    <input type="email" placeholder="Enter alternate email address" name="value" />
                    <button type="submit">Add email address</button>
                </form>
            }

            @* /TIM UI CODE TO REPLACE THIS *@
        </div>
        <aside class="on-right from-top" data-fixed-scroll="root">
            <div data-fixed-scroll="anchor"></div>
            <div data-fixed-scroll="content">
                @Html.Partial(MVC.People.Views._SidebarNav)
            </div>
        </aside>
    </div>
</div>

