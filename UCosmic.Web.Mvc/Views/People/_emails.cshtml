@using UCosmic.Web.Mvc.ApiControllers
@model UCosmic.Web.Mvc.Models.PersonViewModel

@* DEGREES *@
<section class="content fixed to-top">
    @if (Model != null && Model.Emails.Any())
    {
        <h2 style="font-size: 24px; padding-bottom: 1em;">Additional Emails</h2>
        <div>
            <ul style="display: inline-block;">
                @foreach (var email in Model.Emails)
                {
                    if (email != null)
                    {
                        <li class="comma-list"><span>@email</span></li>
                    }
                }
            </ul>
        </div>
    }
</section>
