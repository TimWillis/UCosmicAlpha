@model UCosmic.Web.Mvc.Models.PersonEmailAddressesViewModel

@* EMAILS *@
<section class="content fixed to-top">
    <h2 style="font-size: 24px; padding-bottom: 1em;">Contact Information</h2>
    <div style="float:left; width: 360px;">
        @if (Model != null && Model.Emails.Any())
        {
            <div>
                <ul>
                    @foreach (var emailAddress in Model.Emails)
                    {
                        <li>

                            @if (emailAddress.IsDefault)
                            {
                                <div @if (User.Identity.Name.Equals(Model.Username, StringComparison.OrdinalIgnoreCase)) { @Html.Raw("style='margin-bottom:12px;'")  }>
                                    <strong>
                                        @if (emailAddress.IsConfirmed)
                                        {
                                            <a href='mailTo:@emailAddress.Value'>
                                                @emailAddress.Value
                                            </a>
                                        }
                                        else
                                        {
                                            @emailAddress.Value
                                        }
                                    </strong>
                                    <span style="color: #666;"> (default)</span>
                                </div>
                            }
                            else
                            {
                                if (User.Identity.Name.Equals(Model.Username, StringComparison.OrdinalIgnoreCase))
                                {
                                    @*<form action="@Url.Action(MVC.Emails.Delete())" method="POST">
                                            DELETE /people/{personId}/emails/{number
