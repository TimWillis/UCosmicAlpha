@using System.Runtime.CompilerServices
@model IEnumerable<UCosmic.Web.Mvc.Models.LanguageExpertiseViewModel>

@* DEGREES *@
<section class="content fixed to-top">
    <div>

        @if (Model != null && Model.Any())
        {
            @* RESULTS *@
            <div>
                <ul style="font-size: 20px; line-height: 28px;">
                    @foreach (var language in Model)
                    {
                        <li style="margin-bottom: 2em;">
                            @if (language.LanguageName != null)
                            {
                                if (language.Dialect != null)
                                {
                                    <strong>@language.LanguageName</strong><text>,</text>
                                    <strong>@language.Dialect</strong>


                                }
                                else
                                {
                                    <strong>@language.LanguageName</strong>
                                }
                            }
                            else
                            {
                                if (language.Dialect != null)
                                {
                                    <strong>@language.Other</strong><text>,</text>
                                    <strong>@language.Dialect</strong>
                                }
                                else
                                {
                                    <strong>@language.Other</strong>
                                }
                            }
                            <div id="@string.Format("chart_div_{0}", language.Id)" style="width: 100%; height: 300px;"></div>
                            @*<ul>
                                    @if (language.SpeakingProficiency > 0)
                                    {
                                        <li>
                                            Speaking -
                                            @Html.Partial(MVC.People.Views._LanguagesProficiency, language.SpeakingProficiency)
                                        </li>
                                    }
                                    @if (language.ListeningProficiency > 0)
                                    {
                                        <li>
                                            Listening -
                                            @Html.Partial(MVC.People.Views._LanguagesProficiency, language.ListeningProficiency)
                                        </li>
                                    }
                                    @if (language.ReadingProficiency > 0)
                                    {
                                        <li>
                                            Reading -
                                            @Html.Partial(MVC.People.Views._LanguagesProficiency, language.ReadingProficiency)
                                        </li>
                                    }
                                    @if (language.WritingProficiency > 0)
                                    {
                                        <li>
                                            Writing -
                                            @Html.Partial(MVC.People.Views._LanguagesProficiency, language.WritingProficiency)
                                        </li>
                                    }

                                </ul>*@
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            @* ZERO RESULTS MESSAGE *@
            <p>
                This person has no known language expertise.
            </p>
        }


    </div>
</section>
