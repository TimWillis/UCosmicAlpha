<div data-side-swiper="root" id="search">
    <div data-side-swiper="deck">
        <div data-side-swiper="on" class="left">
            @Html.Partial(MVC.Establishments.Views._FormNamesSection)
            @Html.Partial(MVC.Establishments.Views._FormUrlsSection)
            <section id="location" class="fieldset">
                <header>
                    <h2>
                        Location
                    </h2>
                </header>
                <div>
                    Lat: <input type="text" data-bind="value: toolsMarkerLat" />
                    Lng: <input type="text" data-bind="value: toolsMarkerLng" />
                    <div id="map_canvas" class="map-canvas-w100-h500"></div>
                    <div id="map_tools" class="map-tools">
                        <div class="marker">
                            <img src="~/styles/icons/maps/tools-marker-add.png" alt="Add a placemarker" title="Add a placemarker" class="add-button" />
                            <img src="~/styles/icons/maps/tools-marker-remove.png" alt="Remove placemarker" title="Remove placemarker" class="remove-button" />
                            <div class="confirm-destroy-marker-dialog" title="Please confirm your intent" style="display: none;">
                                <div>
                                    <p>
                                        Are you sure you want to remove this placemark?
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div data-bind="jqElement: '$genericAlertDialog'" title="" style="display: none;">
                <div>
                    <p class="content">
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
