<div data-side-swiper="root" id="search">
    <div data-side-swiper="deck">
        <div data-side-swiper="on" class="left">
            <section id="names" class="fieldset">
                <header>
                    <h2>
                        <span data-bind="visible: id">Name(s)</span>
                        <span data-bind="visible: id === 0">Official Name</span>
                        <a href="#" title="Add a new name" data-bind="visible: canAddName, click: addName">
                            <img src="~/styles/icons/plus-24-green.png" alt="Add a new name" />
                        </a>
                        <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: namesSpinner.isVisible" />
                    </h2>
                </header>
                <ul class="data-items" data-bind="foreach: names">
                    <li data-bind="css: { selected: editMode }">
                        <div class="text-box when-hovered" data-bind="click: showEditor, visible: !editMode(), css: { 'force-unhoverable': $parent.editingName() }">
                            <div class="group">
                                <div class="on-left" style="max-width: 645px;">
                                    <span data-bind="text: text, css: { 'bold': isOfficialName() }" class="inline-block"></span>
                                    <span class="green badge" data-bind="visible: isOfficialName" style="display: none;">Official</span>
                                    <span class="blue badge" data-bind="visible: languageName, text: languageName" style="display: none;"></span>
                                    <span class="red badge" data-bind="visible: isFormerName" style="display: none;">Former / Defunct</span>
                                </div>
                                <div class="on-right" data-bind="visible: !isOfficialName() && !$parent.editingName()">
                                    <a href="#" data-bind="click: purge, visible: !purgeSpinner.isVisible()" title="Delete this name">
                                        <img src="~/styles/icons/minus-20-red.png" alt="" class="align-top" /></a>
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" class="align-top" data-bind="visible: purgeSpinner.isVisible" />
                                </div>
                            </div>
                        </div>
                        <div data-bind="visible: editMode" style="display: none;">
                            <form method="POST" data-bind="submit: saveEditor, validationOptions: { decorateElement: true, errorClass: 'error' }">
                                <div class="field" style="margin-top: 0;">
                                    <textarea rows="1" class="no-resize" data-bind="value: text, jqElement: '$textElement', css: { spinning: textValidationSpinner.isVisible }" data-autosize="true" placeholder="[Enter establishment name here]"></textarea>
                                </div>
                                <div class="field" data-bind="visible: owner.id">
                                    <label data-bind="click: clickOfficialNameCheckbox">
                                        <input type="checkbox" data-bind="checked: isOfficialName, enable: isOfficialNameEnabled" />
                                        Offical Name
                                    </label>
                                    &nbsp;&nbsp;&nbsp;
                                    <label>
                                        <input type="checkbox" data-bind="checked: isFormerName, enable: !isOfficialName()" />
                                        Former / Defunct Name
                                    </label>
                                </div>
                                <div class="field">
                                    <select data-bind="value: selectedLanguageCode, options: $parent.languages, optionsText: 'name', optionsValue: 'code', jqElement: '$languagesElement', visible: $parent.languages().length > 0" style="display: none;">
                                    </select>
                                    <select data-bind="visible: $parent.languages().length < 1">
                                        <option>[Loading...]</option>
                                    </select>
                                </div>
                                <div data-bind="visible: owner.id">
                                    <input type="submit" value="Save" data-bind="enable: !saveSpinner.isVisible()" />
                                    <input type="button" value="Cancel" data-bind="click: cancelEditor, enable: !saveSpinner.isVisible()" class="link" />
                                    &nbsp;
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: textValidationSpinner.isVisible" />
                                    <strong data-bind="visible: textValidationSpinner.isVisible">Validating...</strong>
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: saveSpinner.isVisible" />
                                    <strong data-bind="visible: saveSpinner.isVisible">Saving...</strong>
                                </div>
                            </form>
                        </div>
                        <div data-bind="jqElement: '$confirmPurgeDialog'" title="Please confirm your intent" style="display: none;">
                            <div>
                                <p>
                                    Are you sure you want to delete this establishment name?
                                </p>
                                <div>
                                    <span data-bind="text: text, css: { 'bold': isOfficialName() }" class="inline-block"></span>
                                    <span class="green badge" data-bind="visible: isOfficialName" style="display: none;">Official</span>
                                    <span class="blue badge" data-bind="visible: languageName, text: languageName" style="display: none;"></span>
                                    <span class="red badge" data-bind="visible: isFormerName" style="display: none;">Former / Defunct</span>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </section>
            <section id="urls" class="fieldset">
                <header>
                    <h2>
                        <span data-bind="visible: id">URL(s)</span>
                        <span data-bind="visible: id === 0">Official URL</span>
                        <a href="#" title="Add a new URL" data-bind="visible: canAddUrl, click: addUrl">
                            <img src="~/styles/icons/plus-24-green.png" alt="Add a new URL" />
                        </a>
                        <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: urlsSpinner.isVisible" />
                    </h2>
                </header>
                <ul class="data-items" data-bind="foreach: urls">
                    <li data-bind="css: { selected: editMode }">
                        <div class="text-box when-hovered" data-bind="click: showEditor, visible: !editMode(), css: { 'force-unhoverable': $parent.editingUrl() }">
                            <div class="group">
                                <div class="on-left" style="max-width: 645px;">
                                    <span data-bind="text: value, css: { 'bold': isOfficialUrl() }" class="inline-block"></span>
                                    <span class="green badge" data-bind="visible: isOfficialUrl" style="display: none;">Official</span>
                                    @*<span class="blue badge" data-bind="visible: languageName, text: languageName" style="display: none;"></span>*@
                                    <span class="red badge" data-bind="visible: isFormerUrl" style="display: none;">Former / Defunct</span>
                                    <a class="link badge" href="#/" target="_blank" data-bind="click: clickLink, attr: { href: valueHref }">Link</a>
                                </div>
                                <div class="on-right" data-bind="visible: !isOfficialUrl() && !$parent.editingUrl()">
                                    <a href="#" data-bind="click: purge, visible: !purgeSpinner.isVisible()" title="Delete this URL">
                                        <img src="~/styles/icons/minus-20-red.png" alt="" class="align-top" /></a>
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" class="align-top" data-bind="visible: purgeSpinner.isVisible" />
                                </div>
                            </div>
                        </div>
                        <div data-bind="visible: editMode" style="display: none;">
                            <form method="POST" data-bind="submit: saveEditor, validationOptions: { decorateElement: true, errorClass: 'error' }">
                                <div class="field" style="margin-top: 0;">
                                    <textarea rows="1" class="no-resize" data-bind="value: value, jqElement: '$valueElement', css: { spinning: valueValidationSpinner.isVisible }" data-autosize="true" placeholder="[Enter establishment URL here]"></textarea>
                                    <span class="example">
                                        <br />
                                        <span>Enter without protocol. For example, use <strong>www.domain.edu</strong> instead of <strong>http://www.domain.edu</strong>.</span>
                                        <a href="#/" target="_blank" data-bind="click: clickLink, attr: { href: valueHref }, visible: valueHref">Test Link</a>
                                        @*<span data-bind="visible: !valueHref()" style="color: #999;">Test Link</span>*@
                                    </span>
                                </div>
                                <div class="field" data-bind="visible: owner.id">
                                    <label data-bind="click: clickOfficialUrlCheckbox">
                                        <input type="checkbox" data-bind="checked: isOfficialUrl, enable: isOfficialUrlEnabled" />
                                        Offical URL
                                    </label>
                                    &nbsp;&nbsp;&nbsp;
                                    <label>
                                        <input type="checkbox" data-bind="checked: isFormerUrl, enable: !isOfficialUrl()" />
                                        Former / Defunct URL
                                    </label>
                                </div>
                                <div data-bind="visible: owner.id">
                                    <input type="submit" value="Save" data-bind="enable: !saveSpinner.isVisible()" />
                                    <input type="button" value="Cancel" data-bind="click: cancelEditor, enable: !saveSpinner.isVisible()" class="link" />
                                    &nbsp;
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: valueValidationSpinner.isVisible" />
                                    <strong data-bind="visible: valueValidationSpinner.isVisible">Validating...</strong>
                                    <img src="~/styles/icons/spinner-20-blue.gif" alt="" data-bind="visible: saveSpinner.isVisible" />
                                    <strong data-bind="visible: saveSpinner.isVisible">Saving...</strong>
                                </div>
                            </form>
                        </div>
                        <div data-bind="jqElement: '$confirmPurgeDialog'" title="Please confirm your intent" style="display: none;">
                            <div>
                                <p>
                                    Are you sure you want to delete this establishment URL?
                                </p>
                                <div>
                                    <span data-bind="text: value, css: { 'bold': isOfficialUrl() }" class="inline-block"></span>
                                    <span class="green badge" data-bind="visible: isOfficialUrl" style="display: none;">Official</span>
                                    @*<span class="blue badge" data-bind="visible: languageName, text: languageName" style="display: none;"></span>*@
                                    <span class="red badge" data-bind="visible: isFormerUrl" style="display: none;">Former / Defunct</span>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </section>
            <div data-bind="jqElement: '$genericAlertDialog'" title="" style="display: none;">
                <div>
                    <p class="content">
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
