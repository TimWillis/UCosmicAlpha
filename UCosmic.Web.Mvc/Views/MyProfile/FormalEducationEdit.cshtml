}

<div class="content fixed to-top" data-current-module="home">
    <div data-side-swiper="root">
        <div data-side-swiper="deck">
            <div data-side-swiper="on">
                <div class="group">
                    <div id="degree-edit" class="on-left from-top" style="width: 100%;">
				        
                        <!-- BUTTONS -->
                        <div style="margin-bottom: 32px" data-bind="template: { name: 'buttons-template'}"></div>

                        <header>
                            <h1>@ViewBag.Title</h1>
                        </header>

                        <div style="margin-bottom: 38px">
                            <!-- TITLE -->
                            <div>
                                <span class="required-field-name">Title</span>
                                <span>
                                    <textarea rows="1" style="width: 750px; white-space: nowrap; overflow: hidden" placeholder="[Enter Title]" data-bind="value: title"></textarea>
                                </span>
                            </div>

                            <!-- YEAR AWARDED -->
                            <div>
                                <span class="required-field-name">Year Awarded</span>
                                <span>
                                    <textarea rows="1" style="width: 750px; white-space: nowrap; overflow: hidden" placeholder="[Enter Year]" data-bind="value: yearAwarded"></textarea>
                                </span>
                            </div>

                            <!-- INSTITUTION -->
                            <div>
                                <span class="required-field-name">Institution</span>
                                <span>
                                    <input id="institution" style="width: 400px; white-space: nowrap; overflow: hidden" data-bind="value: institutionName"/>
                                </span>
                            </div>

                            <!-- INSTITUTION COUNTRY -->
                            <div>
                                <span class="required-field-name">County of Institution</span>
                                <span>
                                    <select id="institution-country" style="width: 750px; overflow-y:auto" data-bind="selectedOptions: institutionCountry"></select>
                                </span>
                            </div>
                        </div>
                            
                        <!-- BUTTONS -->
                        <div style="margin-bottom: 32px" data-bind="template: { name: 'buttons-template'}"></div>

                        <!-- LAST UPDATED -->
                        <div style="width: 50%; height: 1.5em; border-top: 1px; border-style: solid">
                            <span style="font-size:smaller; color:slategray">
                                <span>Last updated</span>
                                <label id="last-updated-date" data-bind="text: (whenLastUpdated() != null) ? moment(whenLastUpdated()).toDate() : ''"></label>
                                <span> by </span>
                                <label id="last-updated-name" data-bind="text: whoLastUpdated()"></label>
                            </span>
                        </div>
                    </div>                      
                </div>
            </div>
        </div>
    </div>
</div>

                  
<!-- JQUERY DIALOGS -->
<div id="cancelConfirmDialog" style="visibility: hidden" title="Confirm Cancel">
    <div>By cancelling, you will lose all changes.</div>
    <br/>
    <div style="font-weight: bold">Are you sure you want to Cancel editing this degree?</div>
</div>

<div id="degreeBeingEditedDialog" style="visibility: hidden" title="Error Renaming Document">
    <div>The degree cannot be edited at this time because it is in use by:</div>
    <br/>
    <div id="editingUserName" style="text-align: center"></div>
    <a id="editingUserEmail" style="text-align: center"></a>
</div>


<!-- KNOCKOUT TEMPLATES -->
<script type="text/html" id="buttons-template">
    <span>
        <input type="button" value="Save as Draft" data-bind="click: function (item, event) { save(item, event, 'Save'); }, clickBubble: false"/>
        <input type="button" value="Guide Me" style="margin-left: 50px"/>
        <input type="button" value="Cancel" style="float: right" data-bind="click: function (item, event) { cancel(item, event); }, clickBubble: false"/>
    </span>
</script>