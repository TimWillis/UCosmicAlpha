        .no-close .ui-dialog-titlebar-close {
            display: none;
        }

        .affiliation-item {
            vertical-align: top;
            display: inline-block;
            width: 365px;
            overflow: hidden;
            white-space: nowrap;
            -o-text-overflow: ellipsis;
