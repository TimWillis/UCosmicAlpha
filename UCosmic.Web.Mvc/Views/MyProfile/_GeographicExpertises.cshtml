<section id="geographic-expertises">
    <header>
        <h2>
            <span>Geographic Expertise</span>
            <a href="@Url.Action(MVC.MyProfile.NewGeographicExpertise())" title="Add a new expertise">
                <img src="~/images/icons/plus/plus-24-green.png" alt="Add a new expertise" />
            </a>
        </h2>
    </header>
    <table class="data">
        <tbody data-bind="template: { name: 'geographic-expertises-template', foreach: items }">
        </tbody>
    </table>
</section>

<!-- DIALOGS -->
<div id="confirmGeographicExpertiseDeleteDialog" title="Please confirm your intent" class="dialog">
    <div style="text-align: center; font-weight: bold">Are you sure you want to delete this expertise?</div>
</div>

<!-- KNOCKOUT TEMPLATES -->

<script type="text/html" id="geographic-expertises-template">
    <tr class="hover-hilite">
        <!-- Description -->
        <td>
            <a href="#" data-bind="attr: { href: $parent.editExpertiseUrl(id()) }" style="display: block; color: inherit; text-decoration: inherit;">
                <span style="font-size: large; font-weight: bold; vertical-align: middle" data-bind="text: $parent.formatLocations(locations())"></span>
            </a>
        </td>
        <!-- Remove Button -->
        <td style="text-align: center; vertical-align: middle">
            <a href="#" title="Remove expertise" data-bind="click: function (data, event) { $parent.deleteExpertise(data, event, $parent); }, clickBubble: false">
                <img src="@Links.images.icons.minus.minus_24_red_png" alt="Remove expertise" />
            </a>
        </td>
    </tr>
</script>

