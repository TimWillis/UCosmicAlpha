<section id="degrees">
    <header>
        <h2>
            <span>Degrees</span>
            <a href="#" title="Add a new degree" data-bind="click: function (data, event) { newEducation(data, event); }">
                <img src="~/images/icons/plus/plus-24-green.png" alt="Add a new degree" />
            </a>
        </h2>
    </header>
    <div>
        <span>Degrees will be displayed in the order they are entered.</span>
    </div>
    <table class="data">
        <tbody data-bind="template: { name: 'degrees-template', foreach: items }">
        </tbody>
    </table>
</section>

<!-- DIALOGS -->
<div id="confirmDegreeDeleteDialog" title="Please confirm your intent" class="dialog">
    <div style="text-align: center; font-weight: bold">Are you sure you want to delete this degree?</div>
</div>

<!-- KNOCKOUT TEMPLATES -->

<script type="text/html" id="degrees-template">
    <tr class="hover-hilite">
        <!-- Description -->
        <td>
            <a href="#" data-bind="attr: { href: $parent.editUrl(id()) }" style="text-decoration: inherit; color: inherit; display: block;">
                <div style="height: 30px; font-size: large;">
                    <span style="font-weight: bold" data-bind="text: title()"></span>
                    <span data-bind="visible: fieldOfStudy() != null">,&nbsp;</span>
                    <span data-bind="text: fieldOfStudy(), visible: fieldOfStudy() != null"></span>
                </div>
                <div style="height: 30px">
                    <span style="vertical-align: middle" data-bind="text: formattedInfo()"></span>
                </div>
            </a>
        </td>
        <!-- Remove Button -->
        <td style="text-align: center; vertical-align: middle">
            <a href="#" title="Remove degree" data-bind="click: function (data, event) { $parent.deleteEducation(data, event, $parent); }, clickBubble: false">
                <img src="@Links.images.icons.minus.minus_24_red_png" alt="Remove degree" />
            </a>
        </td>
    </tr>
</script>

