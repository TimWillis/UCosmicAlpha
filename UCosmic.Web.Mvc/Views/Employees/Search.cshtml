@{
    ViewBag.Title = "Search Activities";
}
@section bib
{
    <nav class="bib hide" data-current-bib="search">
    @Html.Partial(MVC.Employees.Views._Bib)
</nav>
}
<div class="content fixed to-top" data-current-module="employees">
    <form class="group" method="GET" action="">
        <div class="on-left from-top">
            <header>
                <h1>
                    @ViewBag.Title
                </h1>
            </header>
            <div>
                @* KEYWORD TEXT BOX *@
                <div class="field" style="margin-bottom: 0;">
                    <input type="search" data-xbind="value: keyword" placeholder="Find an activity by keyword." name="keyword" style="width: 588px; margin-right: 12px" />
                    <input type="submit" value="Search" title="Click here or press the enter key to search." />
                </div>
            </div>
        </div>
        <aside class="on-right from-top" data-fixed-scroll="root">
            <div data-fixed-scroll="anchor"></div>
            <div data-fixed-scroll="content">
                <nav class="side">
                    <ul class="top">
                        <li class="static square-bottom" style="margin-bottom: 0px;">
                            <div class="group no-link">
                                <span class="arrow"></span>
                                <span class="text">Search Options</span>
                            </div>
                        </li>
                        <li class="static square-bottom">
                            <div class="content">
                                <div class="field">
                                    <select class="side" data-bind="options: countries, optionsCaption: '[All countries]', optionsText: 'name',
    optionsValue: 'code', value: countryCode, enabled: optionsEnabled"
                                            name="countryCode">
                                        <option>[Loading...]</option>
                                    </select>
                                </div>
                                <div class="field">
                                    <select class="side" name="orderBy" data-bind="value: orderBy, enabled: optionsEnabled">
                                        <option value="title-asc">Sort by title A-Z</option>
                                        <option value="title-desc">Sort by title Z-A</option>
                                        <option value="location-asc">Sort by location A-Z</option>
                                        <option value="location-desc">Sort by location Z-A</option>
                                        <option value="type-asc">Sort by type A-Z</option>
                                        <option value="type-desc">Sort by type Z-A</option>
                                    </select>
                                </div>
                                <div class="field">
                                    <select name="pageSize" class="side" data-bind="value: pageSize, enabled: optionsEnabled">
                                        <option value="10">Show 10 results per page</option>
                                        <option value="20">Show 20 results per page</option>
                                        <option value="50">Show 50 results per page</option>
                                        <option value="100">Show 100 results per page</option>
                                        <option value="250">Show 250 results per page</option>
                                    </select>
                                </div>
                                <div class="field" style="display: none;">
                                    <select class="side">
                                        <option value="table">Table</option>
                                        <option value="list">List</option>
                                    </select>
                                </div>
                                <div class="field">
                                    <button class="link" data-bind="click: prevPage, enable: prevEnabled" disabled="disabled">&lt;&lt; Previous</button>
                                    |
                                    <button class="link" data-bind="click: nextPage, enable: nextEnabled" disabled="disabled">Next &gt;&gt;</button>
                                    <input type="hidden" value="1" data-bind="value: pageNumber" />
                                </div>
                            </div>
                        </li>
                    </ul>
                    <ul class="bottom">
                        <li id="nav_profile">
                            <a href="/people/@ViewBag.personId" class="group">
                                <span class="arrow"></span>
                                <span class="text">Profile</span>
                            </a>
                        </li>
                        <li class="current" id="nav_activities">
                            <a href="/people/@ViewBag.personId/activities" class="group">
                                <span class="arrow"></span>
                                <span class="text">Activities</span>
                            </a>
                        </li>
                        <li id="nav_education">
                            <a href="@Url.Action(MVC.People.Activities((int)@ViewBag.personId, null))" class="group">
                                <span class="arrow"></span>
                                <span class="text">Formal Education</span>
                            </a>
                        </li>
                        <li id="nav_global_expertise">
                            <a href="/people/@ViewBag.personId/global-expertise" class="group">
                                <span class="arrow"></span>
                                <span class="text">Global Expertise</span>
                            </a>
                        </li>
                        <li id="nav_language_expertise">
                            <a href="/people/@ViewBag.personId/language-expertise" class="group">
                                <span class="arrow"></span>
                                <span class="text">Language Expertise</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
    </form>
</div>